extends ../../../layouts/LayoutTheme
include ../../../layouts/LayoutCardAuth

block wrapperContent
  +LayoutCardBasic({img:37})
    .auth-form-box
      .text-center.mb-7
        a(href=`${CWD}${paths['default-dashboard']}`).d-flex.flex-center.text-decoration-none.mb-4
          +Logo({text:false,width:58}).fw-bolder.fs-3.d-inline-block
        h4.text-body-highlight إعادة تعيين كلمة المرور
        p.text-body-tertiary أدخل كلمة المرور الجديدة
      form.mt-5
        .position-relative.mb-2(data-password)
          input#password.form-control.form-icon-input.pe-6(type='password' placeholder='أدخل كلمة المرور الجديدة' data-password-input)
          button.btn.px-3.py-0.h-100.position-absolute.top-0.end-0.fs-7.text-body-tertiary(data-password-toggle)
            span.uil.uil-eye.show
            span.uil.uil-eye-slash.hide
        .position-relative.mb-4(data-password)
          input#confirmPassword.form-control.form-icon-input.pe-6(type='password' placeholder='تأكيد كلمة المرور الجديدة' data-password-input)
          button.btn.px-3.py-0.h-100.position-absolute.top-0.end-0.fs-7.text-body-tertiary(data-password-toggle)
            span.uil.uil-eye.show
            span.uil.uil-eye-slash.hide
        button.btn.btn-primary.w-100(type='submit') تعيين كلمة المرور