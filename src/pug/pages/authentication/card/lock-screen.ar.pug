extends ../../../layouts/LayoutTheme
include ../../../layouts/LayoutCardAuth

block wrapperContent
  +LayoutCardBasic({img:37})
    .auth-form-box
      .text-center.mb-5
        .avatar.avatar-4xl.mb-4
          img.rounded-circle(src=`${CWD}assets/img/team/30.webp`, alt='')
        h2.text-body-highlight
          span.fw-normal مرحبًا
          | جون سميث
        p.text-body-tertiary أدخل كلمة المرور للوصول إلى
          br.d-sm-none.d-md-block.d-xxl-none
          | لوحة الإدارة
      .position-relative(data-password)
        input#password.form-control.mb-3(type='password' placeholder='أدخل كلمة المرور' data-password-input)
        button.btn.px-3.py-0.h-100.position-absolute.top-0.end-0.fs-7.text-body-tertiary(data-password-toggle)
          span.uil.uil-eye.show
          span.uil.uil-eye-slash.hide
      a.btn.btn-primary.w-100(href=`${CWD}${paths['default-dashboard']}`) تسجيل الدخول